{
  "name": "waisgo-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./test/jest-unit.json",
    "test:watch": "jest --config ./test/jest-unit.json --watch",
    "test:cov": "jest --config ./test/jest-unit.json --coverage",
    "test:cov:unit": "jest --config ./test/jest-unit.json --coverage --coverageDirectory coverage/unit",
    "test:cov:integration": "npm run migration:run:test && jest --config ./test/jest-integration.json --runInBand --verbose --coverage --coverageDirectory coverage/integration",
    "test:cov:e2e": "npm run migration:run:test && jest --config ./test/jest-e2e.json --runInBand --verbose --coverage --coverageDirectory coverage/e2e",
    "test:cov:all": "npm run test:cov:unit && npm run test:cov:integration && npm run test:cov:e2e && node scripts/merge-coverage.js coverage/unit/lcov.info coverage/integration/lcov.info coverage/e2e/lcov.info --out coverage/lcov.info",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config ./test/jest-unit.json --runInBand",
    "test:e2e": "npm run migration:run:test && jest --config ./test/jest-e2e.json --runInBand --verbose",
    "test:integration": "npm run migration:run:test && jest --config ./test/jest-integration.json --runInBand --verbose",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- -d ormconfig.migration.ts migration:generate",
    "migration:create": "npm run typeorm -- -d ormconfig.migration.ts migration:create",
    "migration:run": "npm run typeorm -- -d ormconfig.migration.ts migration:run",
    "migration:run:test": "cross-env NODE_ENV=test npm run migration:run",
    "migration:revert": "npm run typeorm -- -d ormconfig.migration.ts migration:revert"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "^11.0.0",
    "@paypal/paypal-server-sdk": "^2.1.0",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.2.7",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.2",
    "jose": "^4.15.5",
    "minio": "^8.0.6",
    "nest-commander": "^3.20.1",
    "nodemailer": "^6.9.13",
    "oci-objectstorage": "^2.122.2",
    "oci-sdk": "^2.122.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^7.0.4",
    "@types/supertest": "^6.0.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "overrides": {
    "html-minifier": "^5.0.0",
    "mjml-core": "^4.18.1"
  }
}
