# =========================
# Configuración general
# =========================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:4200

# =========================
# Identifiers
# =========================
ALLOW_UUID_IDENTIFIERS=false

# =========================
# Base de datos PostgreSQL
# =========================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=wasigo_app
DB_PASSWORD=wasigo_app_pwd
DB_NAME=wasigo
DB_MIGRATION_USERNAME=wasigo_migrator
DB_MIGRATION_PASSWORD=wasigo_migrator_pwd
DB_SSL=false

# =========================
# JWT (DEBE ser exactamente 32 caracteres para AES-256-GCM)
# =========================
JWT_SECRET=cambiar_por_secreto_de_32_chars!
JWT_EXPIRES_IN=8h

# =========================
# PayPal (sandbox para desarrollo)
# =========================
PAYPAL_CLIENT_ID=tu_client_id_de_paypal
PAYPAL_SECRET=tu_secret_de_paypal
PAYPAL_MODE=sandbox
PAYPAL_BASE_URL=https://api-m.sandbox.paypal.com

# =========================
# Redis
# =========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=tu_password_redis_seguro

# =========================
# Correo SMTP (Gmail ejemplo)
# Para Gmail: habilitar "Contraseñas de aplicación"
# https://myaccount.google.com/apppasswords
# =========================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=tu_correo@gmail.com
MAIL_PASS=tu_app_password_de_gmail
MAIL_FROM="WasiGo <noreply@wasigo.com>"

# =========================
# Rate Limiting (Throttler)
# TTL en milisegundos, LIMIT es cantidad de requests
# =========================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# =========================
# Limpieza de usuarios no verificados
# =========================
CLEANUP_UNVERIFIED_DAYS=7

# =========================
# OTP (One Time Password)
# =========================
OTP_EXPIRATION_MINUTES=15
MAX_OTP_ATTEMPTS=3
MAX_OTP_RESENDS=3

# =========================
# Seguridad - Bloqueo de cuenta
# =========================
MAX_FAILED_ATTEMPTS=5
BLOCK_TIME_MINUTES=15

# =========================
# Reset de contraseña
# =========================
RESET_TOKEN_EXPIRY_MINUTES=30
MAX_RESET_ATTEMPTS=3


# =========================
# Storage (agnóstico)
# =========================
STORAGE_DRIVER=minio   # minio | oci
STORAGE_PROFILE_BUCKET=profile-images
STORAGE_DRIVER_BUCKET=driver-documents

# =========================
# MinIO (Almacenamiento de objetos)
# =========================
MINIO_ENDPOINT=
MINIO_PORT=
MINIO_USE_SSL=
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=

# =========================
# Oracle Cloud Infrastructure (OCI) - Almacenamiento de objetos
# =========================
OCI_NAMESPACE=
OCI_REGION=
OCI_CONFIG_PATH=
OCI_CONFIG_PROFILE=
